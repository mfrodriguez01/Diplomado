<p id="notice"><%= notice %></p>

<h2>Listing Airplanes</h2>

<table class ="table-sm">
 <thead class="thead-inverse">
    <tr>
      <th>Number</th>
      <th>Model</th>
      <th>Capacity</th>
      <th>Size</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @airplanes.each do |airplane| %>
      <tr>
        <td><%= airplane.number %></td>
        <td><%= airplane.model %></td>
        <td><%= airplane.capacity %></td>
        <td><%= airplane.size %></td>
        <td><%= airplane.state %></td>
        <td><%= link_to 'Show', airplane_path(airplane.id) %></td>
        <td><%= link_to 'Edit', edit_airplane_path(airplane.id) %></td>
        <td><%= link_to 'Destroy', airplane, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Airplane', new_airplane_path %>
