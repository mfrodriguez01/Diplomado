<p id="notice"><%= notice %></p>

<h2>Listing History Sessions</h2>

<table class ="table-sm">
 <thead class="thead-inverse">
    <tr>
      <th>Date</th>
      <th>Hour</th>
      <th>State</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @history_sessions.each do |history_session| %>
      <tr>
        <td><%= history_session.date %></td>
        <td><%= history_session.hour %></td>
        <td><%= history_session.state %></td>
        <td><%= history_session.user.name %></td>
        <td><%= link_to 'Show', history_session %></td>
        <td><%= link_to 'Edit', edit_history_session_path(history_session) %></td>
        <td><%= link_to 'Destroy', history_session, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

