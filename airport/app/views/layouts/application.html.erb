<!DOCTYPE html>
<html>
<head>
  <title>Airport</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
	<% if @current_user %>
		<%= @current_user.name %>
		<%= link_to 'Salir', logout_path, class: 'btn btn-danger' %>
	<% else %>
		<%= link_to 'Ingresar', login_path, class: 'btn btn-primary' %>
	<% end %>

<%= yield %>
</div>
</body>
</html>
