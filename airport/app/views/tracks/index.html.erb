<p id="notice"><%= notice %></p>

<h2>Listing Tracks</h2>

<table class ="table-sm">
 <thead class="thead-inverse">
    <tr>
      <th>Code</th>
      <th>Long</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tracks.each do |track| %>
      <tr>
        <td><%= track.code %></td>
        <td><%= track.long %></td>
        <td><%= track.state %></td>
        <td><%= link_to 'Show', track_path(track.id) %></td>
        <td><%= link_to 'Edit', edit_track_path(track.id) %></td>
        <td><%= link_to 'Destroy', track, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

